<%- include('blog/header') %>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #eef2f5;
    }

    .hero {
        background: linear-gradient(135deg, #ff7eb3, #591885);
        color: white;
        padding: 50px;
        text-align: center;
        border-radius: 12px;
        margin-bottom: 40px;
    }

    .container {
        max-width: 1100px;
    }

    .card {
        border-radius: 15px;
        transition: transform 0.3s ease-in-out;
        background: #ffffff;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
        overflow: hidden;
    }

    .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    }

    .blog-img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .card-body {
        padding: 20px;
    }

    .btn-custom {
        border-radius: 25px;
        transition: 0.3s;
    }

    .btn-custom:hover {
        background-color: #ff7eb3;
        color: white;
    }
</style>

<div class="container">
    <div class="hero m-5">
        <h1>Explore Inspiring Blogs</h1>
        <p>Read the latest blogs and discover new insights.</p>
        <a href="/blogs/add-blog" class="btn btn-light btn-lg btn-custom">Write a Blog</a>
    </div>

    <h2 class="text-center my-4">Latest Blogs</h2>

        <div class="row">
            <% blogs.forEach(blog => { %>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title"><%= blog.title %></h5>
                            <p class="card-text"><%= blog.content.substring(0, 100) %>...</p>
                            <p class="text-muted"><strong>Category:</strong> <%= blog.category %></p>
                            <p class="text-muted">By <%= blog.author %> on <%= new Date(blog.createdAt).toDateString() %></p>
                            <img src="<%= blog.blogImage %>" class="blog-img mb-5" alt="BlogImage" height="80" width="80"/>
                            <div class="d-flex justify-content-between">
                                <a href="/blogs/edit-blog/<%= blog._id %>" class="btn btn-warning btn-sm">Edit</a>
                                <a href="/blogs/delete-blog/<%= blog._id %>" class="btn btn-danger btn-sm">Delete</a>
                             <a href="/blogs/blogDetails/<%= blog._id %>">   <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#blogModal<%= blog._id %>">Read More</button></a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="modal fade" id="blogModal<%= blog._id %>" tabindex="-1" role="dialog" aria-labelledby="blogModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title"><%= blog.title %></h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <% if (blog.blogImage) { %>
                                    <img src="<%= blog.blogImage %>"  alt="Blog Image">
                                <% } %>
                                <p><%= blog.content %></p>
                                <p class="text-muted"><strong>Category:</strong> <%= blog.category %></p>
                                <p class="text-muted">By <%= blog.author %> on <%= new Date(blog.createdAt).toDateString() %></p>
                                <% if (blog.tags.length > 0) { %>
                                    <p><strong>Tags:</strong> <%= blog.tags.join(", ") %></p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
   
</div>

<%- include('blog/footer') %>
