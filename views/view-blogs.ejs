<%- include('header') %>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .hero {
            background: linear-gradient(135deg, #ff7eb3, #591885);
            color: white;
            padding: 50px;
            text-align: center;
            border-radius: 12px;
            margin-bottom: 40px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

        .card {
            border-radius: 15px;
            transition: all 0.4s ease-in-out;
            background: #ffffff;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            border: none;
        }

        .card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.3);
        }

        .blog-img {
            width: 100%;
            height: 220px;
            object-fit: cover;
            border-bottom: 3px solid #ff7eb3;
        }

        .card-body {
            padding: 25px;
        }

        .card-title {
            font-size: 1.4rem;
            font-weight: bold;
            color: #591885;
            margin-bottom: 10px;
        }

        .card-text {
            font-size: 0.95rem;
            color: #555;
            line-height: 1.5;
        }

        .btn-custom {
            border-radius: 25px;
            transition: 0.3s;
            font-weight: bold;
            padding: 10px 20px;
        }

        .btn-custom:hover {
            background-color: #ff7eb3;
            color: white;
        }

        /* Category Buttons */
        .text-center.mb-4 a {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 12px 18px;
            margin: 6px;
            border-radius: 30px;
            font-weight: bold;
            text-decoration: none;
            transition: 0.3s ease-in-out;
            font-size: 0.95rem;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
            color: white;
        }

        .text-center.mb-4 a:nth-child(1) {
            background: linear-gradient(135deg, #2C3E50, #34495E);
        }

        .text-center.mb-4 a:nth-child(2) {
            background: linear-gradient(135deg, #1E90FF, #00BFFF);
        }

        .text-center.mb-4 a:nth-child(3) {
            background: linear-gradient(135deg, #2ECC71, #27AE60);
        }

        .text-center.mb-4 a:nth-child(4) {
            background: linear-gradient(135deg, #F39C12, #F1C40F);
        }

        .text-center.mb-4 a:nth-child(5) {
            background: linear-gradient(135deg, #E67E22, #D35400);
        }

        .text-center.mb-4 a:nth-child(6) {
            background: linear-gradient(135deg, #E74C3C, #C0392B);
        }

        .text-center.mb-4 a:nth-child(7) {
            background: linear-gradient(135deg, #16A085, #1ABC9C);
        }

        .text-center.mb-4 a:nth-child(8) {
            background: linear-gradient(135deg, #8E44AD, #9B59B6);
        }

        .text-center.mb-4 a:nth-child(9) {
            background: linear-gradient(135deg, #FF1493, #C71585);
        }

        .text-center.mb-4 a:nth-child(10) {
            background: linear-gradient(135deg, #4B0082, #6A5ACD);
        }

        .text-center.mb-4 a:hover {
            transform: translateY(-3px) scale(1.1);
            opacity: 0.9;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

        form.mb-4 {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            padding: 15px;
            border-radius: 12px;
        }

        form.mb-4 input {
            width: 50%;
            padding: 12px 15px;
            border: none;
            border-radius: 25px;
            outline: none;
            font-size: 1rem;
            color: #333;
            background: #fff;
            transition: all 0.3s ease-in-out;
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
        }

        form.mb-4 button {
            padding: 12px 20px;
            border: none;
            border-radius: 25px;
            font-size: 1rem;
            font-weight: bold;
            cursor: pointer;
            background: linear-gradient(135deg, #ff416c, #ff4b2b);
            color: white;
            transition: all 0.3s ease-in-out;
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.2);
        }

        form.mb-4 button:hover {
            transform: scale(1.1);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            background: linear-gradient(135deg, #ff4b2b, #ff416c);
        }

        @media (max-width: 768px) {
            .hero {
                padding: 30px;
            }

            .card-title {
                font-size: 1.2rem;
            }

            .card-text {
                font-size: 0.9rem;
            }
        }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <div class="container">
        <div class="hero m-5">
            <h1>Explore Inspiring Blogs</h1>
            <p>Read the latest blogs and discover new insights.</p>
            <a href="/blogs/add-blog" class="btn btn-light btn-lg btn-custom">
                <i class="bi bi-pencil-square"></i> Write a Blog
            </a>
        </div>
        <!-- Searching -->
        <form action="/blogs/view-blogs" method="GET" class="mb-4">
            <input type="text" name="search" placeholder="Search Blogs" class="form-control w-50 d-inline-block">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i> Search
            </button>
        </form>

        <h2 class="text-center my-4">Latest Blogs</h2>

        <!-- Filtering -->

        <div class="text-center mb-4">
            <a href="/blogs/view-blogs" class="btn btn-outline-dark"><i class="bi bi-globe"></i> All</a>
            <a href="/blogs/view-blogs?category=Technology" class="btn btn-outline-dark"><i class="bi bi-cpu"></i>
                Technology</a>
            <a href="/blogs/view-blogs?category=Health" class="btn btn-outline-dark"><i class="bi bi-heart-pulse"></i>
                Health</a>
            <a href="/blogs/view-blogs?category=Education" class="btn btn-outline-dark"><i
                    class="bi bi-mortarboard"></i> Education</a>
            <a href="/blogs/view-blogs?category=Adventure" class="btn btn-outline-dark"><i class="bi bi-map"></i>
                Adventure</a>
            <a href="/blogs/view-blogs?category=Food Recipes" class="btn btn-outline-dark"><i
                    class="bi bi-egg-fried"></i> Food Recipes</a>
            <a href="/blogs/view-blogs?category=Marketing" class="btn btn-outline-dark"><i class="bi bi-bar-chart"></i>
                Marketing</a>
            <a href="/blogs/view-blogs?category=Entertainment" class="btn btn-outline-dark"><i class="bi bi-film"></i>
                Entertainment</a>
            <a href="/blogs/view-blogs?category=Lifestyle" class="btn btn-outline-dark"><i class="bi bi-stars"></i>
                Lifestyle</a>
            <a href="/blogs/view-blogs?category=Other" class="btn btn-outline-dark"><i class="bi bi-puzzle"></i>
                Other</a>
        </div>

        <div class="row">
            <% blogs.forEach(blog=> { %>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <% if (blog.blogImage) { %>
                            <img src="<%= blog.blogImage %>" class="blog-img" alt="Blog Image">
                            <% } %>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= blog.title %>
                                    </h5>
                                    <p class="card-text">
                                        <%= blog.content.substring(0, 100) %>...
                                    </p>
                                    <p class="text-muted"><strong>Category:</strong>
                                        <%= blog.category %>
                                    </p>
                                    <div class="d-flex justify-content-between">
                                        <a href="/blogs/edit-blog/<%= blog._id %>" class="btn btn-warning btn-sm">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a href="/blogs/delete-blog/<%= blog._id %>" class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                        <a href="/blogs/blogDetails/<%= blog._id %>" class="btn btn-primary btn-sm">
                                            <i class="bi bi-eye"></i> Read More
                                        </a>
                                    </div>
                                </div>
                    </div>
                </div>
                <% }); %>
        </div>

        <!-- Pagination -->
        <div class="d-flex justify-content-center my-4">
            <ul class="pagination">
                <% if (currentPage> 1) { %>
                    <li class="page-item">
                        <a class="page-link"
                            href="/blogs/view-blogs?page=<%= currentPage - 1 %>&category=<%= category || '' %>&search=<%= search || '' %>">Previous</a>
                    </li>
                    <% } %>

                        <% for (let i=1; i <=totalPages; i++) { %>
                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                <a class="page-link"
                                    href="/blogs/view-blogs?page=<%= i %>&category=<%= category || '' %>&search=<%= search || '' %>">
                                    <%= i %>
                                </a>
                            </li>
                            <% } %>

                                <% if (currentPage < totalPages) { %>
                                    <li class="page-item">
                                        <a class="page-link"
                                            href="/blogs/view-blogs?page=<%= currentPage + 1 %>&category=<%= category || '' %>&search=<%= search || '' %>">Next</a>
                                    </li>
                                    <% } %>
            </ul>
        </div>
    </div>

    <%- include('footer') %>