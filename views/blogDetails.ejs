<%- include('header') %>
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }

    .blog-container {
        max-width: 800px;
        margin: auto;
        background: #fff;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 50px;
    }

    .blog-title {
        font-size: 2rem;
        font-weight: bold;
        color: #333;
    }

    .blog-meta {
        font-size: 14px;
        color: #777;
    }

    .blog-image {
        width: 100%;
        max-height: 400px;
        object-fit: cover;
        border-radius: 8px;
        margin: 20px 0;
    }

    .blog-content {
        font-size: 18px;
        line-height: 1.6;
        color: #444;
    }

    .back-btn {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 20px;
        background: #007bff;
        color: white;
        border-radius: 5px;
        text-decoration: none;
        transition: 0.3s;
    }

    .back-btn:hover {
        color: black;
        background: #6da1da;
    }
    
</style>

<div class="container mt-5">
    <div class="blog-container">
        <h1 class="blog-title"><%= blog.title %></h1>
        <p class="blog-meta">By <strong><%= blog.author %></strong> | <%= new Date(blog.createdAt).toDateString() %></p>

        <% if (blog.blogImage) { %>
            <img src="<%= blog.blogImage %>" alt="Blog Image" class="blog-image">
        <% } %>

        <p class="blog-content"><%= blog.content %></p>

        <% if (blog.tags && blog.tags.length > 0) { %>
            <p><strong>Tags:</strong> <%= blog.tags.join(", ") %></p>
        <% } %>

        <a href="/blogs/view-blogs" class="back-btn"> Back to Blogs</a>
    </div>
</div>

<%- include('footer') %>
